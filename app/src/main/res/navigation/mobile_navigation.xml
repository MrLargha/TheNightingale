<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ru.mrlargha.thenightingale.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_recordFragment"
            app:destination="@id/recordFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_records"
        android:name="ru.mrlargha.thenightingale.ui.records.RecordsFragment"
        android:label="Records"
        tools:layout="@layout/fragment_records" />
    <fragment
        android:id="@+id/navigation_sync"
        android:name="ru.mrlargha.thenightingale.ui.sync.SyncFragment"
        android:label="Sync"
        tools:layout="@layout/fragment_sync" />
    <fragment
        android:id="@+id/recordFragment"
        android:name="ru.mrlargha.thenightingale.ui.record.RecordFragment"
        android:label="fragment_record"
        tools:layout="@layout/fragment_record" >
        <argument
            android:name="musicFileUri"
            app:argType="string" />
    </fragment>

</navigation>